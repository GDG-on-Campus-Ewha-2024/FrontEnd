{
    "compilerOptions":{
        "target":"es5",
        "module":"commonjs",
        "outDir":"./",
        "allowJs":true,

        "checkJs":true,
        "jsx":"react",
        "declaration":true,
        "outFile":"./",
        "rootDir":"./",
        "removeComments":true,

        "strict":true,
        "noImplicitAny":true,
        "strictNullChecks":true,
        "strictPropertyInitialization":true,
        "noImplicitThis":true,
        "alwaysStrict":true,

        "noUnusedLocals":true,
        "noUnuseParameters":true,
        "noImplicitReturns":true,
        "noFallthroughCasesInSwitch":true,
    },
    "include":[
        "./src/**/*"
    ]
}